<Window x:Class="ContractMonthlyClaimSystem.ViewClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem"
        mc:Ignorable="d"
        Title="ViewClaimWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Submitted Claims:" Margin="0,0,0,5"/>
            <ListBox Name="ClaimsListBox" Height="200" />

            <!-- Buttons for Approving and Declining Claims -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Name="ApproveButton" Content="Approve" Width="100" Margin="5" Click="ApproveButton_Click" Background="Green" Foreground="White"/>
                <Button Name="DeclineButton" Content="Decline" Width="100" Margin="5" Click="DeclineButton_Click" Background="Red" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

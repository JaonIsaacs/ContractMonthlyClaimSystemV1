<Window x:Class="ContractMonthlyClaimSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="SubmitClaimButton" Content="Submit a Claim" Width="150" Height="40" Click="SubmitClaimButton_Click"/>
            <Button Name="ViewClaimButton" Content="View a Claim" Width="150" Height="40" Click="ViewClaimButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>

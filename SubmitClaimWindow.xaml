<Window x:Class="ContractMonthlyClaimSystem.SubmitClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractMonthlyClaimSystem"
        mc:Ignorable="d"
        Title="SubmitClaimWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <!-- Claim Details Input -->
        <TextBlock Text="Claim Details:" Margin="0,0,0,5"/>
        <TextBox Name="ClaimDetailsTextBox" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <!-- Document Upload -->
        <TextBlock Text="Attach Document:" Margin="0,10,0,5"/>
        <Button Name="BrowseDocumentButton" Content="Browse..." Click="BrowseDocumentButton_Click"/>

        <!-- Submit Button -->
        <Button Name="SubmitClaimButton" Content="Submit Claim" Margin="0,20,0,0" Click="SubmitClaimButton_Click"/>
    </StackPanel>
</Window>
